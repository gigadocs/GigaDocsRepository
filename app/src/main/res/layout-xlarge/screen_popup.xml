<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/popup_element"
    android:background="#90000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginRight="@dimen/_30sdp"
    android:layout_marginLeft="@dimen/_30sdp"
    android:background="@drawable/popup_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Shift 1"
    android:layout_gravity="center"
    android:gravity="center"
    android:textColor="#008080"
    android:layout_margin="@dimen/_10sdp"
    android:textSize="@dimen/_18sdp"
    />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="@dimen/_5sdp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="I work from"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/_18sdp"
        android:layout_height="match_parent" />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="I work to"
        android:textSize="@dimen/_18sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent" />
</LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/edit_textI_work_from"
        android:layout_weight="1"
        android:hint="1 AM"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@drawable/edit_text_border_gray"
        android:drawableRight="@drawable/ic_expand_more_black_24dp"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/edit_textI_work_to"
        android:layout_weight="1"
        android:hint="1 AM"
        android:clickable="true"
        android:padding="@dimen/_5sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@drawable/edit_text_border_gray"
        android:drawableRight="@drawable/ic_expand_more_black_24dp"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
</LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shift 2"
        android:textColor="#008080"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="@dimen/_18sdp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="I work from"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="I work to"
            android:textSize="@dimen/_18sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/edit_textI_work_fromShift2"
            android:layout_weight="1"
            android:hint="1 AM"
            android:layout_gravity="center"
            android:gravity="center"
            android:clickable="true"
            android:padding="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/edit_text_border_gray"
            android:drawableRight="@drawable/ic_expand_more_black_24dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/edit_textI_work_toShift2"
            android:layout_weight="1"
            android:hint="1 AM"
            android:clickable="true"
            android:padding="@dimen/_5sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/edit_text_border_gray"
            android:drawableRight="@drawable/ic_expand_more_black_24dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <android.support.v7.widget.ButtonBarLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_60sdp"
        android:layout_marginRight="@dimen/_60sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/buttonOk"
            android:text="OK"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/_3sdp"
            android:background="@color/lightCyan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.ButtonBarLayout>
</LinearLayout>

</FrameLayout>