<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_screen"
    tools:context="com.datappsinfotech.gigadocs.fragments.PatientFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_phone"
        android:layout_below="@+id/app_name"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp">
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <EditText
              android:id="@+id/edit_textPatientSearch"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:inputType="phone"
              android:hint="@string/existing_patient_mobile"
              android:padding="@dimen/_10sdp"
              android:textColorHint="@android:color/darker_gray"
              android:background="@drawable/bg_appointment_edit_text">
              <requestFocus />
          </EditText>


          <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:id="@+id/buttonSearch"
              android:src="@drawable/ic_search_black_24dp"
              android:contentDescription="@string/app_name"
              android:padding="@dimen/_10sdp"
              android:background="@drawable/bg_appointment_edit_text"/>
        </LinearLayout>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/list_view"/>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/list_view_one"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edit_textPatientMobile"
        android:hint="Patient Mobile"
        android:background="@drawable/bg_appointment_edit_text"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:maxLength="10"
        android:maxLines="1"
        android:inputType="phone"
        android:textColorHint="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edit_textPatientName"
        android:hint="Patient Name"
        android:background="@drawable/bg_appointment_edit_text"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:maxLines="1"
        android:inputType="text"
        android:textColorHint="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edit_textPatientAddress"
        android:hint="Address"
        android:background="@drawable/bg_appointment_edit_text"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:maxLines="1"
        android:inputType="text"
        android:textColorHint="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edit_textPatientEmailID"
        android:hint="Email ID"
        android:background="@drawable/bg_appointment_edit_text"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:textColorHint="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.ButtonBarLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/buttonAdd"
                android:text="@string/add"
                android:textColor="@android:color/white"
                android:background="@color/lightCyan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.ButtonBarLayout>
        <android.support.v7.widget.ButtonBarLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <Button
            android:text="@string/update"
            android:id="@+id/buttonUpdate"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.ButtonBarLayout>
        <!--<android.support.v7.widget.ButtonBarLayout-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_marginLeft="@dimen/_5sdp"-->
            <!--android:layout_height="wrap_content">-->
            <!--<Button-->
                <!--android:text="@string/view_data"-->
                <!--android:id="@+id/buttonViewData"-->
                <!--android:background="@color/white"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->
        <!--</android.support.v7.widget.ButtonBarLayout>-->
    </LinearLayout>

</LinearLayout>
</ScrollView>
</LinearLayout>
